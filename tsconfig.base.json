{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nyan-inc/core": ["libs/core/src/index.ts"],
      "@nyan-inc/musickit-typescript": [
        "libs/musickit-typescript/src/index.ts"
      ],
      "@nyan-inc/ui": ["libs/ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
