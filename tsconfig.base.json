{
  "compileOnSave": false,
  "include": ["./polyfills.ts"],
  "compilerOptions": {
    "outDir": "./",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nyan-inc/core": ["libs/core/src/index.ts"],
      "@nyan-inc/musickit-typescript": [
        "libs/musickit-typescript/src/index.ts"
      ],
      "@nyan-inc/shared/data-store": ["libs/shared/data-store/src/index.ts"],
      "@nyan-inc/test": ["libs/test/src/index.ts"],
      "@nyan-inc/ui": ["libs/ui/src/index.ts"]
    }
  },
  "angularCompilerOptions": {
    "strictTemplates": true
  },
  "exclude": ["node_modules", "tmp", "frontend"]
}
