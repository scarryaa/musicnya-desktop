{
  "name": "electron",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/electron/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx-electron:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/electron",
        "main": "apps/electron/src/main.ts",
        "tsConfig": "apps/electron/tsconfig.app.json",
        "assets": ["apps/electron/src/assets", "apps/electron/src/app/splash"]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/electron/src/environments/environment.ts",
              "with": "apps/electron/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "nx-electron:execute",
      "options": {
        "args": ["--no-sandbox", "--in-progress-gpu"],
        "buildTarget": "electron:build"
      }
    },
    "package": {
      "executor": "nx-electron:package",
      "options": {
        "name": "electron",
        "frontendProject": "frontend",
        "outputPath": "dist/packages",
        "sourcePath": "dist/apps",
        "prepackageOnly": true
      }
    },
    "make": {
      "executor": "nx-electron:make",
      "options": {
        "name": "electron",
        "frontendProject": "frontend",
        "outputPath": "dist/executables"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/electron/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/electron/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  }
}
