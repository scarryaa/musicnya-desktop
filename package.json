{
	"name": "musicnya-desktop-svelte",
	"version": "1.1.1-alpha",
	"private": true,
	"main": "main.cjs",
	"bin": "main.cjs",
	"build": {
		"electronDownload": {
			"mirror": "https://github.com/castlabs/electron-releases/releases/download/v"
		},
		"appId": "com.nyan-inc.musicnya",
		"productName": "musicnya",
		"linux": {
			"target": [
				"AppImage"
			]
		}
	},
	"scripts": {
		"dev": "(cd ./libs/nyan_core && cargo run) & (cd ./libs/api_server && node index.ts) & vite dev",
		"electron-dev": "concurrently \"yarn run dev\" \"yarn run electron\"",
		"electron": "wait-on http://localhost:5173 && ${IN_NIX_SHELL:+steam-run} electron --no-sandbox .",
		"build": "vite build",
		"dist": "npm run build && electron-builder --publish never",
		"preview": "vite preview",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"devDependencies": {
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/kit": "^1.5.0",
		"@types/lodash": "^4.14.195",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"concurrently": "^8.2.0",
		"electron": "https://github.com/castlabs/electron-releases#26.0.0-alpha.6+wvcus",
		"electron-builder": "^24.4.0",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte": "^2.26.0",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.8.1",
		"sass": "^1.63.6",
		"scss": "^0.2.4",
		"svelte": "^3.54.0",
		"svelte-check": "^3.0.1",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^4.3.0",
		"vitest": "^0.25.3",
		"wait-on": "^7.0.1"
	},
	"type": "module",
	"dependencies": {
		"@fontsource/inter": "^5.0.4",
		"@fontsource/montserrat": "^5.0.4",
		"@fontsource/noto-sans-jp": "^5.0.4",
		"@fontsource/readex-pro": "^5.0.4",
		"@fontsource/uncut-sans": "^5.0.4",
		"electron-serve": "^1.1.0",
		"fast-average-color": "^9.3.0",
		"lodash": "^4.17.21",
		"svelte-material-icons": "^3.0.4"
	}
}
